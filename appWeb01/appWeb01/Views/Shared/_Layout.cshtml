<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <!-- Header con banner -->
    <header class="container-fluid p-0">
        <img src="~/imagenes/banner1.jpg" alt="Banner Cibertec" class="img-fluid w-100" />
    </header>

    <!-- Navbar moderna y responsive -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="~/Home/Index">Cibertec</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/About">Computación</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/Contact">Beca 18</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Especialización TC</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Cisco</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contáctenos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center py-4 mt-4">
        <div class="container">
            <p class="mb-1"><strong>Cibertec Lima Centro</strong></p>
            <p class="mb-1">Av. Uruguay 541 - Lima</p>
            <p class="mb-1">Teléfono: 451-6194</p>
            <p>Email: correo@cibertec.edu.pe</p>
            <div class="mt-3">
                <a href="#" class="mx-2"><img src="~/imagenes/facebook.png" class="img-fluid" width="30" alt="Facebook"></a>
                <a href="#" class="mx-2"><img src="~/imagenes/twitter.png" class="img-fluid" width="30" alt="Twitter"></a>
                <a href="#" class="mx-2"><img src="~/imagenes/instagram.png" class="img-fluid" width="30" alt="Instagram"></a>
                <a href="#" class="mx-2"><img src="~/imagenes/pinterest.png" class="img-fluid" width="30" alt="Pinterest"></a>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
