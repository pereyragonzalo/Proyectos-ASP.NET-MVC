@model POOII_CL2_PEREYRA_GONZALO.Models.Producto

@{
    ViewBag.Title = "Crear Producto";
}

<h2 class="text-center text-info mb-4">Crear Nuevo Producto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal bg-light p-4 rounded shadow-sm">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Product Name -->
        <div class="form-group row mb-3">
            @Html.LabelFor(model => model.ProductName, htmlAttributes: new { @class = "col-md-2 control-label text-primary" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control border-primary shadow-sm" } })
                @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Unit Price -->
        <div class="form-group row mb-3">
            @Html.LabelFor(model => model.UnitPrice, htmlAttributes: new { @class = "col-md-2 control-label text-primary" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UnitPrice, new { htmlAttributes = new { @class = "form-control border-primary shadow-sm" } })
                @Html.ValidationMessageFor(model => model.UnitPrice, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Units in Stock -->
        <div class="form-group row mb-3">
            @Html.LabelFor(model => model.UnitsInStock, htmlAttributes: new { @class = "col-md-2 control-label text-primary" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UnitsInStock, new { htmlAttributes = new { @class = "form-control border-primary shadow-sm" } })
                @Html.ValidationMessageFor(model => model.UnitsInStock, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Category Dropdown -->
        <div class="form-group row mb-3">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "col-md-2 control-label text-primary" })
            <div class="col-md-10">
                @Html.DropDownList("CategoryID", ViewBag.Categoria as SelectList, "-Seleccione Categoría-", new { @class = "form-select border-primary shadow-sm" })
            </div>
        </div>

        <!-- Submit Button -->
        <div class="form-group row">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success btn-lg shadow-sm">Agregar Producto</button>
            </div>
        </div>
    </div>
}

<div class="mt-3 text-center">
    @ViewBag.mensaje
</div>

<div class="mt-2 text-center">
    @Html.ActionLink("Regresar", "IndexProductos", new { @class = "btn btn-outline-primary btn-lg" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<!-- Custom Styles -->
<style>
    .bg-light {
        background-color: #f8f9fa !important;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-outline-primary {
        color: #007bff;
        border-color: #007bff;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }

    .form-control, .form-select {
        border-radius: 10px;
    }

    .form-group.row {
        margin-bottom: 1.5rem;
    }
</style>

