@model IEnumerable<POOII_CL2_PEREYRA_GONZALO.Models.Producto>

@{
    ViewBag.Title = "Index de Productos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Listado de Productos</h2>
        @Html.ActionLink("➕ Nuevo Producto", "Create", null, new { @class = "btn btn-success" })
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.ProductID)</th>
                <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                <th>@Html.DisplayNameFor(model => model.CategoryID)</th>
                <th>@Html.DisplayNameFor(model => model.UnitPrice)</th>
                <th>@Html.DisplayNameFor(model => model.UnitsInStock)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ProductID)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                    <td>@Html.DisplayFor(modelItem => item.CategoryID)</td>
                    <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                    <td>@Html.DisplayFor(modelItem => item.UnitsInStock)</td>
                    <td class="text-center">
                        @Html.ActionLink("✏️ Editar", "Edit", new { id = item.ProductID }, new { @class = "btn btn-outline-primary btn-sm me-1" })
                        @Html.ActionLink("🔍 Detalle", "Details", new { id = item.ProductID }, new { @class = "btn btn-outline-info btn-sm me-1" })
                        @Html.ActionLink("🗑️ Eliminar", "Delete", new { id = item.ProductID }, new { @class = "btn btn-outline-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

